# Pet Licensing Micro-Frontend Environment Variables
# Copy this file to .env.local for local development

# ====================
# REQUIRED
# ====================

# Application
NEXT_PUBLIC_APP_NAME=Pet Licensing
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_DASHBOARD_URL=http://localhost:3000

# Clerk Authentication (Shared with main app)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# ====================
# OPTIONAL
# ====================

# API Endpoint (if this app has its own backend)
NEXT_PUBLIC_API_URL=http://localhost:4000

# Feature Flags
NEXT_PUBLIC_ENABLE_AUTO_RENEWAL=true
NEXT_PUBLIC_ENABLE_DIGITAL_LICENSE=true

# Development
NODE_ENV=development

